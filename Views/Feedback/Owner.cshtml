        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:nth-child(odd) {
        background-color: #f2f2f2;
    }

    .div2 {
        width: 300px;
        height: 400px;
        padding: 50px;
        border: 1px solid red;
        margin-top: 100px;
    }

    td:hover {
        background-color: gray;
        cursor: pointer;
    }

    #tblFeedbacks {
        pointer-events: none;
    }

