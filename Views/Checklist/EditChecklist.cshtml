@model BaristaHome.Models.ChecklistViewModel

@{
    ViewData["Title"] = "Edit Checklist";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Checklist.css" asp-append-version="true" />

    @*Boostrap imports for category and task view*@
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>

    <!--Nav bar area-->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#ffdcf4">
            <a class="nav-link pink-button-left" asp-area="" asp-controller="Checklist" asp-action="Checklist">Back</a>
            <div class="center">
                <h1 class="title">Edit Checklist</h1>
            </div>
            <a class="nav-link pink-button-right" data-toggle="modal" data-target="#newModal">Add Category</a>
        </nav>
    </header>

    <div align="center">
        @*Checklist name*@
        <h1 class="title">@Html.DisplayFor(model => model.ChecklistTitle)</h1>
    </div>

    @*Checklist categories and store tasks*@
    <div class="checklist-info container">
        @{
            var categoryTasks = Model.CategoryTasks == null ? new Dictionary<Category, List<StoreTask>>() : (Dictionary<Category, List<StoreTask>>)Model.CategoryTasks;
            if (categoryTasks.Any())
            {
                foreach (var c in categoryTasks)
                {
                    <div class="list-group">
                        <a id="@c.Key.CategoryId" data-toggle="modal" data-target="#editModal" href="#" class="list-group-item list-group-item-action header-color text-black">@c.Key.CategoryName ID: @c.Key.CategoryId</a>

                        @{
                            foreach (var t in c.Value)
                            {
                                <a id="@t.StoreTaskId" data-toggle="modal" data-target="#editModal-@c.Key.CategoryId-@t.StoreTaskId" href="#" class="list-group-item list-group-item-action">@t.TaskName ID: @t.StoreTaskId</a>

                                <!-- Edit Task Modal (Ensure id's for modal button and modal form are unique in order to display each categories' respective tasks)-->
                                <div class="modal fade" id="editModal-@c.Key.CategoryId-@t.StoreTaskId" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Edit</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form asp-action="Edit" autocomplete="off">
                                                <div class="modal-body">

                                                    <!--Binding  for Checklist-->
                                                    <input name="checklistId" type="hidden" value="@Html.DisplayFor(model => model.ChecklistId)" />

                                                    <!--Binding for CategoryTask-->
                                                    <input name="categoryId" type="hidden" value="@c.Key.CategoryId" />
                                                    <input name="taskId" type="hidden" value="@t.StoreTaskId" />

                                                    <!--Binding for StoreTask-->
                                                    <label>Description</label>
                                                    <input name="taskName" value="@t.TaskName" class="form-control" />

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-function">Create</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        <a id="@c.Key.CategoryId" data-toggle="modal" data-target="#addModal" href="#" class="list-group-item list-group-item-action">+ Add a new task...</a>

                        <p> </p>
                    </div>
                }
            }
        }
    </div>

    @*Modals for editing/adding categories and tasks*@
    

    <!-- Add Task Modal -->
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <label>Title</label>
                        <input asp-for="ChecklistTitle" class="form-control" />
                        <span asp-validation-for="ChecklistTitle" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-function">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Category Modal -->
    <div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newModalLabel">Add Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <label>Title</label>
                        <input asp-for="ChecklistTitle" class="form-control" />
                        <span asp-validation-for="ChecklistTitle" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-function">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Pretty import one liner that prevents POSTing from happening upon invalid inputs-->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
