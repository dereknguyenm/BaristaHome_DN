@model BaristaHome.Models.Checklist

@{
    ViewData["Title"] = "Edit Checklist";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Checklist.css" asp-append-version="true" />

    @*Boostrap imports for category and task view*@
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>

    <!--Nav bar area-->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#ffdcf4">
            <a class="nav-link pink-button-left" asp-area="" asp-controller="Checklist" asp-action="Checklist">Back</a>
            <div class="center">
                <h1 class="title">Edit Checklist</h1>
            </div>
            <!-- Button trigger modal -->
            <a class="nav-link pink-button-right" data-toggle="modal" data-target="#newModal">Add Category</a>
        </nav>
    </header>

    <div align="center">
        @*Checklist name*@
        <h1 class="title">@Html.DisplayFor(model => model.ChecklistTitle)</h1>
    </div>

    @*Checklist categories and store tasks*@
    <div class="checklist-info container">
        @{
            var myList = ViewBag.ChecklistInfo == null ? new Dictionary<string, List<string>>() : (Dictionary<string, List<string>>)ViewBag.ChecklistInfo;

            if (myList.Any())
            {
                foreach (var c in myList)
                {
                    <div class="list-group">

                        <a data-toggle="modal" data-target="#editModal" href="#" class="list-group-item list-group-item-action header-color text-black">@c.Key</a>

                        @{
                            foreach (var aa in c.Value)
                            {
                                <a data-toggle="modal" data-target="#editModal" href="#" class="list-group-item list-group-item-action">@aa</a>
                            }
                        }
                        <a data-toggle="modal" data-target="#addModal" href="#" class="list-group-item list-group-item-action">+ Add a new task...</a>

                        <p> </p>
                    </div>
                }
            }
        }
    </div>

    @*Creates a checklist*@
    

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <label>Title</label>
                        <input asp-for="ChecklistTitle" class="form-control" />
                        <span asp-validation-for="ChecklistTitle" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-function">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Task Modal -->
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <label>Title</label>
                        <input asp-for="ChecklistTitle" class="form-control" />
                        <span asp-validation-for="ChecklistTitle" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-function">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Category Modal -->
    <div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newModalLabel">Add Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <label>Title</label>
                        <input asp-for="ChecklistTitle" class="form-control" />
                        <span asp-validation-for="ChecklistTitle" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-function">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Pretty import one liner that prevents POSTing from happening upon invalid inputs-->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
