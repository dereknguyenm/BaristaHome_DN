@{
    ViewData["Title"] = "Shared Calendar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" /> <!-- probably add custom css changes on this css file -->
    
    <!--Load the AJAX API-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
        // Load the Visualization API and the piechart package
        google.charts.load('current', {
            packages: ['corechart', 'bar']
        });
        // Set a callback to run when the Google Visualization API is loaded
        google.charts.setOnLoadCallback(loadData);

        // Loads the data from the controller that was queried from the db
        function loadData() {
            $.ajax({

                url: '/Menu/GetSales',
                dataType: "json",
                type: "GET",
                error: function (xhr, status, error) {
                    var err = eval("(" + xhr.responseText + ")");
                    toastr.error(err.message);
                },
                success: function (data) {
                    drawChart(data);
                    return false;
                }
            });
            return false;
        }

        // Instantiates the chart, passes in the data and draws it.
        function drawChart(data) {
            var dataArray = [
                ['Drink', 'Count', 'Profit']
            ];
            $.each(data, function (i, item) {
                // property names have to be CAMEL CASED even if it's not in your viewmodel
                dataArray.push([item.drinkName, item.unitsSold, item.profit]);
            });
            var data = google.visualization.arrayToDataTable(dataArray);
            var options = {
                title: 'Sale Records For Each Drink',
                chartArea: {
                    width: '50%'
                },
                colors: ['#ffdcf4', '#ffe4bc'],
                hAxis: {
                    title: 'Sales',
                    minValue: 0
                },
                vAxis: {
                    title: 'Drink'
                }
            };

            // Instantiate and draw chart, passing in options defined above
            var chart = new google.visualization.BarChart(document.getElementById('barChart'));
            chart.draw(data, options);
            return false;
        }
    </script>
