@model IEnumerable<BaristaHome.Models.SaleViewModel>
@*model BaristaHome.Models.ChartData*@

@{
    ViewData["Title"] = "Shared Calendar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" /> <!-- probably add custom css changes on this css file -->
    
    <!--Load the AJAX API-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        // Load the Visualization API and the piechart package
        google.charts.load('current', { 'packages': ['corechart'] });

        // Set a callback to run when the Google Visualization API is loaded
        google.charts.setOnLoadCallback(drawChart);

        @*function drawChart() {
            var model = @Html.Raw(Json.Serialize(Model));
            var allData = [];
            allData.push(['Year', 'Sales']);


            $.each(model.data_Axis_Y, function (index, item) {
