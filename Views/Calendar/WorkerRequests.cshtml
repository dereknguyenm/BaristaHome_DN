@*This page displays the current worker's requests and their statuses*@

<html>
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" /> <!-- probably add custom css changes on this css file -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

        <style>
        @*CSS Styling*@
        .page-title {
            display: inline-block;
            padding-bottom: 30px;
            font-size: 30px;
            padding-left: 20px;
            font-weight: 500;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        .background {
            background-color: antiquewhite;
            box-shadow: 1px 1px 0 rgba(0, 0, 0, 0.15);
            padding-top: 30px;
            padding-bottom: 30px;
            padding-left: 30px;
            padding-right: 30px;
            margin: 0 auto;
            align-self: center;
            max-width: 1400px;
        }

        .page-title {
            display: inline-block;
            padding-bottom: 30px;
            font-size: 30px;
            padding-left: 20px;
            font-weight: 500;
        }


        .green-button {
            background: #44CC44;
            color: white;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align:center;
            padding-top:5px;
            margin-bottom:0px;
            margin-left: -20px;
        }


        .red-button {
            background: tomato;
            color: white;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align: center;
            padding-top: 5px;
            margin-bottom: 0px;
            margin-left: -20px;
        }

        .gray-button {
            background: gray;
            color: black;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align: center;
            padding-top: 5px;
            margin-bottom: 0px;
            margin-left: -20px;
        }
        </style>
    </head>
    <body>

        @*Navigation bar*@
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#ffdcf4">
                <a class="nav-link pink-button-left" asp-area="" asp-controller="Calendar" asp-action="Requests">Back</a>
                <div class="center">
                    <h1 class="title">Your Shift-Swapping Requests</h1>
                </div>
            </nav>

        </header>
       
        @*Display a table with columns: Request from, offered shift, your shift*@
        <div class="background">
            <table class="table">
            <thead>
                <tr>
                    <th>
                        Request To
                    </th>
                    <th>
                        Your Shift
                    </th>
                    <th>
                        Requested shift
                    </th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @*First example row*@
                @*@foreach (var item in Model)
                {*@
                
                    
                @foreach(var k in ViewBag.ShiftRequests) {
                    <tr>
                        <td>
                            @k.RecipientUser.FirstName
                            @k.RecipientUser.LastName
                        </td>
                        <td>
                            @k.SenderShift.StartShift
                            <div> To </div>
                            @k.SenderShift.EndShift
                        </td>
                        <td>
                            @k.RecipientShift.StartShift
                            <div> To </div>
                            @k.RecipientShift.EndShift
                        </td>
                        <td>
                            @if(k.Response == true) {
                                <button class="green-button">
                                    Accepted
                                </button>
                            }

                             @if(k.Response == false) {
                                <button class="red-button">
                                    Declined
                                </button>
                            }

                            @if(k.Response == null) {
                                <button class="gray-button">
                                    Pending
                                </button>
                            }

                        </td>
                    </tr>
                }
                
                @*}*@
            </tbody>
        </table>

        </div>
    </body>
</html>