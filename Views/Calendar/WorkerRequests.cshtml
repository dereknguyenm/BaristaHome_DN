@*This page displays the current worker's requests and their statuses*@

<html>
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • Barista Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaristaHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" /> <!-- probably add custom css changes on this css file -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

        <style>
        @*CSS Styling*@
        .page-title {
            display: inline-block;
            padding-bottom: 30px;
            font-size: 30px;
            padding-left: 20px;
            font-weight: 500;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        .background {
            background-color: antiquewhite;
            box-shadow: 1px 1px 0 rgba(0, 0, 0, 0.15);
            padding-top: 30px;
            padding-bottom: 30px;
            padding-left: 30px;
            padding-right: 30px;
            margin: 0 auto;
            align-self: center;
            max-width: 1400px;
        }

        .page-title {
            display: inline-block;
            padding-bottom: 30px;
            font-size: 30px;
            padding-left: 20px;
            font-weight: 500;
        }


        .green-button {
            background: #44CC44;
            color: white;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align:center;
            padding-top:5px;
            margin-bottom:0px;
            margin-left: -20px;
        }


        .red-button {
            background: tomato;
            color: white;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align: center;
            padding-top: 5px;
            margin-bottom: 0px;
            margin-left: -20px;
        }

        .gray-button {
            background: gray;
            color: black;
            border: none;
            border-radius: 20px;
            height: 35px;
            width: 100px;
            box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.15);
            transition: background-color 0.15s, color 0.15s;
            text-align: center;
            padding-top: 5px;
            margin-bottom: 0px;
            margin-left: -20px;
        }
        </style>
    </head>
    <body>

        @*Navigation bar*@
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#ffdcf4">
                <a class="nav-link pink-button-left" asp-area="" asp-controller="Calendar" asp-action="Requests">Back</a>
                <div class="center">
                    <h1 class="title">Your Shift-Swapping Requests</h1>
                </div>
            </nav>

        </header>
       
        @*Display a table with columns: Request from, offered shift, your shift*@
        <div class="background">
            <table class="table">
            <thead>
                <tr>
                    <th>
                        Request From
                    </th>
                    <th>
                        Offered shift
                    </th>
                    <th>
                        Your shift
                    </th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @*First example row*@
                @*@foreach (var item in Model)
                {*@
                <tr>
                    <td>
                        Jane Do
                    </td>
                    <td>
                        Nov 10, 12:00pm - 6:00pm
                    </td>
                    <td>
                        Nov 11, 9:00pm -3:00pm
                    </td>
                    <td>
                        <p class="gray-button">Pending</p>
                    </td>
                </tr>

                @*Second example row*@
                <tr>
                    <td>
                        John Do
                    </td>
                    <td>
                        Nov 2, 11:00am - 4:00pm
                    </td>
                    <td>
                        Nov 3, 4:00pm - 11:00pm
                    </td>
                    <td>
                        <p class="green-button">Accepted</p>
                        
                    </td>
                </tr>

                @*Third example row*@
                <tr>
                    <td>
                        John Nguyen
                    </td>
                    <td>
                        Nov 5, 9:00am - 4:00pm
                    </td>
                    <td>
                        Nov 6, 5:00pm - 11:00pm
                    </td>
                    <td>
                        <p class="red-button">Denied</p>
                    </td>
                </tr>
                @*}*@
            </tbody>
        </table>

        </div>
    </body>
</html>