@{
    ViewData["Title"] = "Worker Management";
}




    <head>
        <title>Worker Management</title>
        <style>

            body {
                font-family: arial;
                background-color: rgb(255, 244, 191);
            }

            .worker-display {
                display: flex;
                background-color: white;
                border-radius: 2px;
                box-shadow: 0px 0px 4px rgba(95, 94, 94, 0.3);
                height: 50px;
                align-items: center;
                max-width: 500px;
                justify-content: space-between;
                margin-bottom: 5px;
            }

            .worker-pfp {
                height: 30px;
                width: 30px;
                border-radius: 60px;
                margin-right: 15px;
                margin-left: 25px;
                object-fit: cover;
            }

            .worker-name {
                font-size: 15px;
                font-weight: 600;
                margin-right: 15px;
                margin-bottom: 0;
                margin-top: 0px;
            }

            .worker-role {
                font-size: 12px;
                margin-top: 0;
                margin-bottom: 0;
                color: gray;
            }

            .see-more-button {
                border: none;
                height: 30px;
                background-color: white;
                width: 30px;
                padding-right: 40px;
            }

            .see-more-icon {
                height: 30px;
            }

            .invite-employee {
                display: flex;
                border:none;
                background-color: rgb(244, 169, 182);
                color: white;
                border-radius: 2px;
                box-shadow: 0px 0px 3px rgba(95, 94, 94, 0.3);
                height: 50px;
                align-items: center;
                justify-content: center;
                width: 300px;
                margin-bottom: 2px;
                
            font-size: 15px;
            font-weight: 600;
            display: flex;
            }
        </style>
    </head>

    <h1 class="page-title">Worker Management</h1>
        <!--comment-->

        <!--Displays 1 worker name & role and a "view more" button in a single row-->
        <div class="worker-display">
            <div style="display: flex; align-items: center;">
            
            <img class="worker-pfp" src="@Url.Content("~/images/pompurrin.jpg")" />
                <div class="worker-info">
                    <p class="worker-name">Jane Smith</p>
                    <p class="worker-role">Barista</p>
                </div>
            </div>

            <div style="display: flex; align-items: center;">
                <button class="see-more-button">
                <img class="see-more-icon" src="@Url.Content("~/images/see-more-1.png")">
                </button>
            </div>
        </div>

        <!--Displays "invite employee"-->
        <button class="invite-employee">
            Invite Employee
        </button>
    



