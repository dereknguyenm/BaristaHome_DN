<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Item Name
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ItemName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerUnit)
